<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_location_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Cairo,Egypt" />

    <TextView
        android:id="@+id/tv_temp_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/temperature"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_location_name" />

    <TextView
        android:id="@+id/tv_temp_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_temp_title"
        app:layout_constraintStart_toEndOf="@id/tv_temp_title"
        tools:text="28" />

    <TextView
        android:id="@+id/tv_humidity_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/humidity"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_temp_title" />

    <TextView
        android:id="@+id/tv_humidity_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_humidity_title"
        app:layout_constraintStart_toEndOf="@id/tv_humidity_title"
        tools:text="28" />

    <TextView
        android:id="@+id/tv_wind_speed_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/wind_speed"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_humidity_title" />

    <TextView
        android:id="@+id/tv_wind_speed_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_wind_speed_title"
        app:layout_constraintStart_toEndOf="@id/tv_wind_speed_title"
        tools:text="28" />

    <TextView
        android:id="@+id/tv_wind_deg_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/wind_deg"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_wind_speed_title" />

    <TextView
        android:id="@+id/tv_wind_deg_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_wind_deg_title"
        app:layout_constraintStart_toEndOf="@id/tv_wind_deg_title"
        tools:text="28" />

</android.support.constraint.ConstraintLayout>